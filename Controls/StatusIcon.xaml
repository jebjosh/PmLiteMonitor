<UserControl x:Class="PmLiteMonitor.Controls.StatusIcon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="36" Height="36">
    <Border CornerRadius="4" Background="#111" BorderBrush="#555" BorderThickness="1">
        <Grid>
            <Rectangle x:Name="FillRect" Margin="3" RadiusX="2" RadiusY="2" Fill="#505050"/>
            <!-- Diagonal stripe overlay shown only for Gray/unknown state -->
            <Rectangle x:Name="StripeOverlay" Margin="3" RadiusX="2" RadiusY="2"
                       Visibility="Visible">
                <Rectangle.Fill>
                    <DrawingBrush TileMode="Tile"
                                  Viewport="0,0,8,8" ViewportUnits="Absolute"
                                  Opacity="0.4">
                        <DrawingBrush.Drawing>
                            <GeometryDrawing Brush="#333">
                                <GeometryDrawing.Pen>
                                    <Pen Brush="#888" Thickness="1.5"/>
                                </GeometryDrawing.Pen>
                                <GeometryDrawing.Geometry>
                                    <LineGeometry StartPoint="0,8" EndPoint="8,0"/>
                                </GeometryDrawing.Geometry>
                            </GeometryDrawing>
                        </DrawingBrush.Drawing>
                    </DrawingBrush>
                </Rectangle.Fill>
            </Rectangle>
        </Grid>
    </Border>
</UserControl>
