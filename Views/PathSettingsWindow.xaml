<Window x:Class="PmLiteMonitor.Views.PathSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Path Settings" Height="260" Width="620"
        ResizeMode="NoResize"
        Background="#1E1E1E" Foreground="White"
        WindowStartupLocation="CenterOwner">

    <StackPanel Margin="20">

        <!-- ── Session Log Folder ─────────────────────────────────────────────── -->
        <TextBlock Text="Session Log Folder"
                   Foreground="#90CAF9" FontWeight="SemiBold"
                   FontSize="13" Margin="0,0,0,6"/>

        <TextBlock Text="Every message and event is written to a timestamped .log file in this folder."
                   FontSize="10" Foreground="#AAAAAA" Margin="0,0,0,6" TextWrapping="Wrap"/>

        <Grid Margin="0,0,0,4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox Grid.Column="0"
                     Text="{Binding LogFolder, UpdateSourceTrigger=PropertyChanged}"
                     Foreground="White" CaretBrush="White"
                     md:HintAssist.Hint="C:\Users\...\PmLiteLogs"
                     md:HintAssist.Foreground="#AAAAAA"
                     Height="32"/>
            <Button Grid.Column="1" Content="Browse…"
                    Command="{Binding BrowseLogFolderCommand}"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Foreground="White" Margin="8,0,0,0" Height="32"/>
        </Grid>

        <!-- Active log file indicator -->
        <TextBlock Text="{Binding LogFilePath, StringFormat='Active file: {0}'}"
                   FontSize="10" Foreground="#AAAAAA" Margin="0,0,0,20"/>

        <!-- ── Capture Output Path ─────────────────────────────────────────────── -->
        <TextBlock Text="Capture Output Path"
                   Foreground="#90CAF9" FontWeight="SemiBold"
                   FontSize="13" Margin="0,0,0,6"/>

        <TextBlock Text="Binary (.bin) and text (.txt) capture files are written here when MRS ON is detected."
                   FontSize="10" Foreground="#AAAAAA" Margin="0,0,0,6" TextWrapping="Wrap"/>

        <Grid Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox Grid.Column="0"
                     Text="{Binding RecordOutputPath, UpdateSourceTrigger=PropertyChanged}"
                     Foreground="White" CaretBrush="White"
                     md:HintAssist.Hint="C:\Users\...\PmLiteCaptures"
                     md:HintAssist.Foreground="#AAAAAA"
                     Height="32"/>
            <Button Grid.Column="1" Content="Browse…"
                    Command="{Binding BrowseOutputPathCommand}"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Foreground="White" Margin="8,0,0,0" Height="32"/>
        </Grid>

        <!-- ── Close ──────────────────────────────────────────────────────────── -->
        <Button Content="Close"
                Click="Close_Click"
                Style="{StaticResource MaterialDesignRaisedButton}"
                Background="#2A2A2A" Foreground="White"
                HorizontalAlignment="Right" Padding="24,8"/>

    </StackPanel>
</Window>
